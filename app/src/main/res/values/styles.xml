<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <!--TextView themes.-->
    <style name="mediumTextView" parent="android:Widget.TextView">
        <item name="android:paddingTop">@dimen/padding_high</item>
        <item name="android:paddingLeft">@dimen/padding_high</item>
        <item name="android:paddingRight">@dimen/padding_low</item>
        <item name="android:paddingEnd">@dimen/padding_low</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
    </style>
    <style name="largeTextView" parent="android:Widget.TextView">
        <item name="android:paddingTop">@dimen/padding_low</item>
        <item name="android:paddingLeft">@dimen/padding_high</item>
        <item name="android:paddingRight">@dimen/padding_low</item>
        <item name="android:paddingEnd">@dimen/padding_low</item>
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
    </style>
</resources>
